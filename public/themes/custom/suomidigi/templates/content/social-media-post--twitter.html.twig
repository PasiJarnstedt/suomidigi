<article class="tweet">
  <a href="{{ content.link[0]['#url'] }}" class="tweet__link">
    <div class="tweet-wrapper">
      <div class="tweet__header">
        <div class="tweet__author-icon">Suomidigi 
        </div>
        <div class="tweet__author">
          <h3>{{ name }}</h3>
          <h4>@suomidigi</h4>
        </div>
        <div class="twitter-icon">
           {% if icons_path %}
                  <svg class="icon">
                    <title>{{ text }}</title>
                    <use xlink:href="{{ icons_path|trim }}#social-media-twitter"/>
                  </svg>
            {% endif %} 
        </div>
      </div>
    
        <div class="tweet__content">
        {{ text|striptags('<div>')|raw }} 
        </div>
        <div class="tweet__date">
        {{ content.created }}
        </div>
    </div>
  </a>
</article>